# custom aliases
alias ls='eza --color=always --group-directories-first --icons=always'
alias lt='eza --color=always --group-directories-first --icons=always --tree --git --level=2'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../..'
alias grep='grep --color=auto'
